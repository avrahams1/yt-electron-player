{
  "name": "secure-electron-template",
  "version": "2.0.4",
  "description": "The best way to build Electron apps with security in mind.",
  "private": true,
  "main": "app/electron/main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "dev-server": "cross-env NODE_ENV=development webpack-dev-server --config ./webpack.development.js",
    "dev": "concurrently \"npm run dev-server\" \"cross-env NODE_ENV=development electron .\" -k",
    "prod-build": "cross-env NODE_ENV=production npx webpack --mode=production --config ./webpack.production.js",
    "prod": "npm run prod-build && electron .",
    "pack": "electron-builder --dir",
    "dist": "npm run prod-build && electron-builder",
    "dist-mac": "npm run prod-build && electron-builder --mac",
    "dist-linux": "npm run prod-build && electron-builder --linux",
    "dist-windows": "npm run prod-build && electron-builder --windows",
    "dist-all": "npm run prod-build && electron-builder --mac --linux --windows"
  },
  "build": {
    "productName": "YT Player",
    "appId": "umbrella.corp|electron.yt-player",
    "directories": {
      "buildResources": "resources"
    },
    "extraFiles": [
      {
        "from": "app/dist",
        "to": "appdist"
      }
    ],
    "win": {
      "target": [
        "portable"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reZach/secure-electron-template.git"
  },
  "keywords": [
    "electron",
    "security",
    "template",
    "react",
    "redux",
    "webpack",
    "i18next",
    "boilerplate"
  ],
  "author": "reZach",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/reZach/secure-electron-template/issues"
  },
  "homepage": "https://github.com/reZach/secure-electron-template#readme",
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-transform-react-jsx": "^7.12.12",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "babel-loader": "^8.2.2",
    "babel-plugin-module-resolver": "^4.1.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "csp-html-webpack-plugin": "^4.0.0",
    "css-loader": "^3.6.0",
    "electron": "^9.4.0",
    "electron-builder": "^22.9.1",
    "electron-debug": "^3.2.0",
    "electron-devtools-installer": "^2.2.4",
    "html-loader": "^1.3.2",
    "html-webpack-plugin": "^4.5.1",
    "mini-css-extract-plugin": "^0.9.0",
    "sass": "^1.32.2",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.3.0",
    "url-loader": "^4.1.1",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.1",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.5.0",
    "axios": "^0.21.1",
    "classnames": "^2.2.6",
    "connected-react-router": "^6.8.0",
    "easy-redux-undo": "^1.0.2",
    "express": "^4.17.1",
    "lodash": "^4.17.20",
    "lodash.merge": "^4.6.2",
    "path": "^0.12.7",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-flexview": "^5.0.0",
    "react-icons": "^3.11.0",
    "react-redux": "^7.2.2",
    "react-redux-toastr": "^7.6.5",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-tooltip-lite": "^1.12.0",
    "redux": "^4.0.5",
    "secure-electron-context-menu": "^1.2.2",
    "secure-electron-store": "1.1.0"
  }
}
